<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>io.arrow-kt.arrow-intellij</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Arrow</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="trupill@gmail.com" url="https://arrow-kt.io">Arrow Contributors</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description>Helpers for working with the Arrow libraries</description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <localInspection
                language="kotlin"
                enabledByDefault="true"
                level="WARNING"
                displayName="Missing 'bind' in 'Raise'"
                groupName="Arrow"
                implementationClass="arrow.intellij.raise.BindInspection"/>
        <localInspection
                language="kotlin"
                enabledByDefault="true"
                level="WARNING"
                displayName="Different error type in 'Raise'"
                groupName="Arrow"
                implementationClass="arrow.intellij.raise.WithErrorInspection"/>
        <localInspection
                language="kotlin"
                enabledByDefault="true"
                level="WARNING"
                displayName="Escaped 'Raise' contexts"
                groupName="Arrow"
                implementationClass="arrow.intellij.raise.EscapedRaiseInspection"/>
        <localInspection
                language="kotlin"
                enabledByDefault="true"
                level="WARNING"
                displayName="Idiomatic usage of 'ensure'"
                groupName="Arrow"
                implementationClass="arrow.intellij.raise.EnsureInspection"/>
        <localInspection
                language="kotlin"
                enabledByDefault="true"
                level="WARNING"
                displayName="Atomic references with primitive types"
                groupName="Arrow"
                implementationClass="arrow.intellij.wrong.AtomicPrimitiveInspection"/>
        <localInspection
                language="kotlin"
                enabledByDefault="true"
                level="WARNING"
                displayName="Atomic references with primitive types"
                groupName="Arrow"
                implementationClass="arrow.intellij.wrong.WhenOnEvalInspection"/>
        <localInspection
                language="kotlin"
                enabledByDefault="true"
                level="WARNING"
                displayName="Missing Arrow serializer"
                groupName="Arrow"
                implementationClass="arrow.intellij.fix.MissingSerializer"/>
    </extensions>
</idea-plugin>